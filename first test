#include<stdio.h>
#include<stdlib.h>
#include<math.h>


int main() {
	int i,T, x1, y1, r1, x2, y2, r2,array[3];
	scanf("%d", &T);
	
	for (i = 0; i < T; i++)
	{
		scanf("%d %d %d %d %d %d", &x1, &y1, &r1, &x2, &y2, &r2);

		if (x1 == x2&&y1 == y2)
		{
			if (r1 == r2)
				array[i] = -1;
			else
				array[i] = 0;
		}
		else
		{
			if (sqrt((pow((double)x1 - x2, 2) + pow((double)y1 - y2, 2))) == r1 + r2)
				array[i] = 1;
			else if (sqrt((pow((double)x1 - x2, 2) + pow((double)y1 - y2, 2))) == r1 || sqrt((pow((double)x1 - x2, 2) + pow((double)y1 - y2, 2))) == r2)
				array[i] = 1;
			else if (sqrt((pow((double)x1 - x2, 2) + pow((double)y1 - y2, 2))) > r1 + r2)
				array[i] = 0;
			else if (abs(r1 - r2) > sqrt((pow((double)x1 - x2, 2) + pow((double)y1 - y2, 2))))
				array[i] = 0;
			else
				array[i] = 2;
		}
	}
	
	for (i = 0; i < T;i++)
	printf("%d\n", array[i]);
	return 0;
}
